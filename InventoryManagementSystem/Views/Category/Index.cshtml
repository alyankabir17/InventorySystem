@model IEnumerable<InventoryManagementSystem.Models.Entities.Category>

@{
    Layout = "~/Views/Shared/_DashLayout.cshtml";
    ViewData["Title"] = "Categories";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3 bg-dark text-white p-3 rounded">
        <h2 class="mb-0 fw-bold">Categories</h2>
        <div>
            <a asp-controller="Dashboard" asp-action="Index" class="btn btn-outline-light me-2">
                &larr; Back to Dashboard
            </a>
            <a asp-action="Create" class="btn btn-primary">
                <i class="fa fa-plus"></i> Add Category
            </a>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <table class="table table-striped table-hover mb-0">
                <thead class="bg-light">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Id)</th>
                        <th>@Html.DisplayNameFor(model => model.Name)</th>
                        <th>@Html.DisplayNameFor(model => model.Description)</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model != null && Model.Any())
                    {
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Id</td>
                                <td class="fw-bold">@item.Name</td>
                                <td>@item.Description</td>
                                <td class="text-center">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning text-dark">
                                            Edit
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                                            Delete
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    }
                    else
                    {
                        <tr>
                            <td colspan="4" class="text-center p-4 text-muted">
                                No categories found. Click "Add Category" to create one.
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>