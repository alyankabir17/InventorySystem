@model IEnumerable<InventoryManagementSystem.Models.Entities.Sale>

@{
    Layout = "~/Views/Shared/_DashLayout.cshtml";
    ViewData["Title"] = "Sales";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3 bg-dark text-white p-3 rounded">
        <h2 class="mb-0 fw-bold">Sales History</h2>
        <a asp-controller="Store" asp-action="Index" class="btn btn-warning fw-bold">Go to Store</a>
    </div>

    <table class="table table-striped table-bordered">
        <thead class="bg-light">
            <tr>
                <th>Date</th>
                <th>Product ID</th>
                <th>Customer ID</th>
                <th>Quantity</th>
                <th>Sold Price (Unit)</th>
                <th>Total Amount</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.SaleDate.ToShortDateString()</td>
                    <td>@item.ProductId</td>
                    <td>@item.CustomerId</td>
                    <td>@item.Quantity</td>
                    <td>$@item.SoldPrice</td>
                    <td class="fw-bold text-success">$@item.TotalAmount</td>
                </tr>
            }
        </tbody>
    </table>
</div>