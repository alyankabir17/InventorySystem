@model IEnumerable<InventoryManagementSystem.Models.Entities.Purchase>

@{
    Layout = "~/Views/Shared/_DashLayout.cshtml";
    ViewData["Title"] = "Purchases";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3 bg-dark text-white p-3 rounded">
        <h2 class="mb-0 fw-bold">Purchase History</h2>
        <div>
            <a asp-controller="Dashboard" asp-action="Index" class="btn btn-outline-light me-2">&larr; Back</a>
            <a asp-action="Create" class="btn btn-primary">New Purchase</a>
        </div>
    </div>

    <table class="table table-striped table-bordered">
        <thead class="bg-light">
            <tr>
                <th>ID</th>
                <th>Product ID</th>
                <th>Supplier ID</th>
                <th>Quantity</th>
                <th>Date</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>@item.ProductId</td>
                    <td>@item.SupplierId</td>
                    <td>@item.Quantity</td>
                    <td>@item.PurchaseDate.ToShortDateString()</td>
                </tr>
            }
        </tbody>
    </table>
</div>