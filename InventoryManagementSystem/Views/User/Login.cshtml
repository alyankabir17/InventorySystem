@using InventoryManagementSystem.Models.Entities;
@{
    ViewData["Title"] = "IMS | Login Page";
}
@model User;

<div class="container mt-5 mx-auto">
    <div class="card border-rounded border-1 shadow-sm col-sm-12 col-lg-5 m-auto">
        <div class="bg-dark text-light p-3">
            <h2 class="text-center display-6 fw-bold">Login Form</h2>
        </div>

        <form class="px-5 py-4" method="post" asp-action="Login" asp-controller="User">

            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label for="Username" class="form-label">Username</label>
                <input type="text" class="form-control" id="Username" name="Username" asp-for="Username">
            </div>
            <div class="mb-4">
                <label for="Password" class="form-label">Password</label>
                <input type="password" class="form-control" id="Password" name="Password" asp-for="Password">
            </div>
            <div class="d-flex align-items-center justify-content-center">
                <button type="submit" class="btn btn-primary">Login</button>
            </div>
        </form>
    </div>
</div>