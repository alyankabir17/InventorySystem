@model IEnumerable<InventoryManagementSystem.Models.Entities.Supplier>
@{
    Layout = "~/Views/Shared/_DashLayout.cshtml"; ViewData["Title"] = "Suppliers";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3 bg-dark text-white p-3 rounded">
        <h2 class="mb-0 fw-bold">Suppliers List</h2>
        <div>
            <a asp-controller="Dashboard" asp-action="Index" class="btn btn-outline-light me-2">&larr; Back</a>
            <a asp-action="Create" class="btn btn-primary">Add Supplier</a>
        </div>
    </div>
    <table class="table table-striped table-bordered">
        <thead>
            <tr><th>Name</th><th>Email</th><th>Phone</th><th>Address</th></tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Email</td>
                    <td>@item.Phone</td>
                    <td>@item.Address</td>
                </tr>
            }
        </tbody>
    </table>
</div>