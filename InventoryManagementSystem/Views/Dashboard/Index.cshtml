@{
    ViewData["Title"] = "Dashboard";
    // Using the layout you mentioned earlier
    Layout = "~/Views/Shared/_DashLayout.cshtml";
}

<div class="container-fluid mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold">Welcome, @ViewBag.Username!</h2>
            <p class="text-muted">Here is what's happening in your inventory today.</p>
        </div>
        <div>
            <span class="badge bg-primary p-2">Date: @DateTime.Now.ToString("MMM dd, yyyy")</span>
        </div>
    </div>

    <div class="row mb-5">
        <div class="col-md-3">
            <div class="card text-white bg-primary shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-box-seam"></i> Total Products</h5>
                    <h2 class="display-6 fw-bold">0</h2>
                    <p class="card-text">Items in stock</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-danger shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-exclamation-triangle"></i> Low Stock</h5>
                    <h2 class="display-6 fw-bold">0</h2>
                    <p class="card-text">Items need reordering</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-success shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-currency-dollar"></i> Total Value</h5>
                    <h2 class="display-6 fw-bold">$0.00</h2>
                    <p class="card-text">Inventory Asset Value</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-dark shadow-sm h-100">
                <div class="card-body">
                    <h5 class="card-title"><i class="bi bi-people"></i> Users</h5>
                    <h2 class="display-6 fw-bold">Active</h2>
                    <p class="card-text">System Administrators</p>
                </div>
            </div>
        </div>
    </div>

    <h4 class="mb-3 fw-bold">Quick Actions</h4>
    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm border-0">
                <div class="card-body text-center p-5">
                    <div class="display-4 text-primary mb-3">📦</div>
                    <h4 class="card-title">Inventory</h4>
                    <p class="card-text text-muted">View products, update stock levels, and manage prices.</p>
                    <div class="d-grid gap-2">
                        <a asp-controller="Product" asp-action="Index" class="btn btn-outline-primary">View All Products</a>
                        <a asp-controller="Product" asp-action="Create" class="btn btn-primary">Add New Product</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card shadow-sm border-0">
                <div class="card-body text-center p-5">
                    <div class="display-4 text-success mb-3">👥</div>
                    <h4 class="card-title">Users</h4>
                    <p class="card-text text-muted">Manage system users, roles, and permissions.</p>
                    <div class="d-grid gap-2">
                        <a asp-controller="User" asp-action="Index" class="btn btn-outline-success">Manage Users</a>
                        <a asp-controller="User" asp-action="Signup" class="btn btn-success">Add New User</a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-4">
            <div class="card shadow-sm border-0">
                <div class="card-body text-center p-5">
                    <div class="display-4 text-secondary mb-3">⚙️</div>
                    <h4 class="card-title">Settings</h4>
                    <p class="card-text text-muted">Update your profile, change password, or logout.</p>
                    <div class="d-grid gap-2">
                        <a asp-controller="User" asp-action="Logout" class="btn btn-danger">Logout</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>